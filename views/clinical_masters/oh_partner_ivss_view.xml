<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Árbol para Centros IVSS -->
    <record id="view_oh_partner_ivss_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.ivss</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Centros IVSS">
                <field name="name" string="Nombre del Centro"/>
                <field name="street" string="Dirección"/>
                <field name="city" string="Ciudad"/>
                <field name="phone" string="Teléfono"/>
                <field name="mobile" string="Móvil"/>
                <field name="email" string="Correo"/>
                <field name="category_id" string="Categorías" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario para Centros IVSS -->
    <!-- Usamos la vista base de partner ya que hereda correctamente -->

    <!-- Vista de Búsqueda para Centros IVSS -->
    <record id="view_oh_partner_ivss_search" model="ir.ui.view">
        <field name="name">res.partner.search.ivss</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Centros IVSS">
                <field name="name" string="Nombre" filter_domain="['|', ('name', 'ilike', self), ('display_name', 'ilike', self)]"/>
                <field name="city" string="Ciudad"/>
                <field name="phone" string="Teléfono"/>
                <field name="email" string="Correo"/>
                <filter string="Con Teléfono" name="has_phone" domain="[('phone', '!=', False)]"/>
                <filter string="Con Correo" name="has_email" domain="[('email', '!=', False)]"/>
                <separator/>
                <filter string="Solo Compañías" name="companies" domain="[('is_company', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana para Centros IVSS -->
    <record id="action_oh_partner_ivss" model="ir.actions.act_window">
        <field name="name">Centros IVSS</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_oh_partner_ivss_tree"/>
        <field name="target">current</field>
        <field name="domain" eval="[('category_id', 'in', [ref('partner_category_ivss')])]"/>
        <field name="context" eval="{'default_is_company': True, 'default_category_id': [(4, ref('partner_category_ivss'))]}"/>
        <field name="search_view_id" ref="view_oh_partner_ivss_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo centro IVSS
            </p>
            <p>
                Los Centros IVSS son hospitales, ambulatorios o centros de salud
                del Instituto Venezolano de los Seguros Sociales donde se pueden
                realizar evaluaciones médicas ocupacionales y gestionar reposos médicos.
            </p>
        </field>
    </record>

    <!-- Elemento de Menú para Centros IVSS -->
    <menuitem id="menu_oh_partner_ivss"
              name="Centros IVSS"
              parent="menu_oh_clinical_masters"
              action="action_oh_partner_ivss"
              sequence="45"/>

</odoo>

