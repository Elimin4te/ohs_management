<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción de Ventana para Centros IVSS -->
    <record id="action_oh_partner_ivss" model="ir.actions.act_window">
        <field name="name">Centros IVSS</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('category_id', 'in', [ref('partner_category_ivss')])]</field>
        <field name="context">{'default_category_id': [(4, ref('partner_category_ivss'))], 'search_default_ivss': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo centro IVSS
            </p>
            <p>
                Los Centros IVSS son hospitales, ambulatorios o centros de salud
                del Instituto Venezolano de los Seguros Sociales donde se pueden
                realizar evaluaciones médicas ocupacionales y gestionar reposos médicos.
            </p>
        </field>
    </record>

    <!-- Elemento de Menú para Centros IVSS -->
    <menuitem id="menu_oh_partner_ivss"
              name="Centros IVSS"
              parent="menu_oh_clinical_masters"
              action="action_oh_partner_ivss"
              sequence="45"/>

</odoo>

