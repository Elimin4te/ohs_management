<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Árbol -->
    <record id="view_oh_diagnosis_tree" model="ir.ui.view">
        <field name="name">oh.diagnosis.tree</field>
        <field name="model">oh.diagnosis</field>
        <field name="arch" type="xml">
            <tree string="Diagnósticos (CIE-11)">
                <field name="code" required="1"/>
                <field name="name" required="1"/>
                <field name="category_id"/>
                <field name="is_notifiable"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario -->
    <record id="view_oh_diagnosis_form" model="ir.ui.view">
        <field name="name">oh.diagnosis.form</field>
        <field name="model">oh.diagnosis</field>
        <field name="arch" type="xml">
            <form string="Diagnóstico (CIE-11)">
                <sheet>
                    <div class="alert alert-info" role="alert" style="margin-bottom: 15px;">
                        <strong>Importante:</strong> Los códigos de diagnóstico (CIE-11) deben seguir el estándar de la OMS para garantizar una reportería médica y epidemiológica válida.
                    </div>
                    <group>
                        <group>
                            <field name="code" required="1" placeholder="Ej: BA00.0, 1B21.1"/>
                            <field name="name" required="1"/>
                            <field name="category_id" options="{'no_create': False, 'no_create_edit': False}"/>
                        </group>
                        <group>
                            <field name="is_notifiable"/>
                            <field name="is_active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Ingrese el detalle completo de la patología según CIE-11..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_oh_diagnosis_search" model="ir.ui.view">
        <field name="name">oh.diagnosis.search</field>
        <field name="model">oh.diagnosis</field>
        <field name="arch" type="xml">
            <search string="Diagnósticos (CIE-11)">
                <field name="name" string="Diagnóstico"/>
                <field name="code" string="Código CIE-11"/>
                <field name="description" string="Descripción"/>
                <field name="category_id" string="Clasificación"/>
                <filter string="Activos" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Notificables" name="notifiable" domain="[('is_notifiable', '=', True)]"/>
                <separator/>
                <filter string="Archivados" name="inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Clasificación" name="group_category" context="{'group_by': 'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana -->
    <record id="action_oh_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnósticos (CIE-11)</field>
        <field name="res_model">oh.diagnosis</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_oh_diagnosis_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear un nuevo diagnóstico
            </p>
            <p>
                Los diagnósticos se basan en la Clasificación Internacional de Enfermedades (CIE-11).
                Cada diagnóstico debe tener un código CIE-11 único. Los diagnósticos notificables
                son aquellos de declaración obligatoria para la Vigilancia Epidemiológica.
            </p>
        </field>
    </record>

    <!-- Elemento de Menú -->
    <menuitem id="menu_oh_diagnosis"
              name="Diagnósticos (CIE-11)"
              parent="menu_oh_clinical_masters"
              action="action_oh_diagnosis"
              sequence="30"/>

</odoo>

