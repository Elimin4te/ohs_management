<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Árbol para Aseguradoras -->
    <record id="view_oh_partner_insurance_tree" model="ir.ui.view">
        <field name="name">res.partner.tree.insurance</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <tree string="Aseguradoras">
                <field name="name" string="Nombre de la Aseguradora"/>
                <field name="street" string="Dirección"/>
                <field name="city" string="Ciudad"/>
                <field name="phone" string="Teléfono"/>
                <field name="mobile" string="Móvil"/>
                <field name="email" string="Correo"/>
                <field name="category_id" string="Categorías" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <!-- Vista de Formulario para Aseguradoras -->
    <!-- Usamos la vista base de partner ya que hereda correctamente -->

    <!-- Vista de Búsqueda para Aseguradoras -->
    <record id="view_oh_partner_insurance_search" model="ir.ui.view">
        <field name="name">res.partner.search.insurance</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Aseguradoras">
                <field name="name" string="Nombre" filter_domain="['|', ('name', 'ilike', self), ('display_name', 'ilike', self)]"/>
                <field name="city" string="Ciudad"/>
                <field name="phone" string="Teléfono"/>
                <field name="email" string="Correo"/>
                <filter string="Con Teléfono" name="has_phone" domain="[('phone', '!=', False)]"/>
                <filter string="Con Correo" name="has_email" domain="[('email', '!=', False)]"/>
                <separator/>
                <filter string="Solo Compañías" name="companies" domain="[('is_company', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Acción de Ventana para Aseguradoras -->
    <record id="action_oh_partner_insurance" model="ir.actions.act_window">
        <field name="name">Aseguradoras</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_oh_partner_insurance_tree"/>
        <field name="target">current</field>
        <field name="domain" eval="[('category_id', 'in', [ref('partner_category_insurance')])]"/>
        <field name="context" eval="{'default_is_company': True, 'default_category_id': [(4, ref('partner_category_insurance'))]}"/>
        <field name="search_view_id" ref="view_oh_partner_insurance_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva aseguradora
            </p>
            <p>
                Las aseguradoras son compañías de seguros que ofrecen cobertura médica
                y de salud ocupacional para los empleados. Este catálogo permite gestionar
                la información de contacto y los datos de las aseguradoras asociadas.
            </p>
        </field>
    </record>

    <!-- Elemento de Menú para Aseguradoras -->
    <menuitem id="menu_oh_partner_insurance"
              name="Aseguradoras"
              parent="menu_oh_clinical_masters"
              action="action_oh_partner_insurance"
              sequence="43"/>

</odoo>

